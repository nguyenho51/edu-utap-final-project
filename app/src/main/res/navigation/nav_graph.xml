<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/NewsFragment">

    <fragment
        android:id="@+id/NewsFragment"
        android:name="edu.utap.stocknewsapp.ui.NewsFragment"
        android:label="@string/news_fragment_label"
        tools:layout="@layout/fragment_news">

        <action
            android:id="@+id/action_NewsFragment_to_FavFragment"
            app:destination="@id/FavoriteFragment" />
        <action
            android:id="@+id/action_NewsFragment_to_AccFragment"
            app:destination="@id/AccountFragment" />

    </fragment>

    <fragment
        android:id="@+id/FavoriteFragment"
        android:name="edu.utap.stocknewsapp.ui.FavoriteFragment"
        android:label="@string/favorite_fragment_label"
        tools:layout="@layout/fragment_favorite">

        <action
            android:id="@+id/action_FavFragment_to_NewsFragment"
            app:destination="@id/NewsFragment" />
        <action
            android:id="@+id/action_FavFragment_to_AccFragment"
            app:destination="@id/AccountFragment" />

    </fragment>

    <fragment
        android:id="@+id/AccountFragment"
        android:name="edu.utap.stocknewsapp.ui.AccountFragment"
        android:label="@string/account_fragment_label"
        tools:layout="@layout/fragment_account">

        <action
            android:id="@+id/action_AccFragment_to_NewsFragment"
            app:destination="@id/NewsFragment" />
        <action
            android:id="@+id/action_AccFragment_to_FavFragment"
            app:destination="@id/FavoriteFragment" />

    </fragment>

</navigation>